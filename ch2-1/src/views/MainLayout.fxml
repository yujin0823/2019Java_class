<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" styleClass="Main" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.MainController">
   <children>
      <HBox alignment="CENTER" layoutX="14.0" layoutY="14.0" prefHeight="169.0" prefWidth="371.0">
         <children>
            <Label fx:id="hour" styleClass="timer" text="00" textFill="WHITE">
               <font>
                  <Font name="Arial" size="70.0" />
               </font>
            </Label>
            <Label text=":" textFill="WHITE">
               <font>
                  <Font size="70.0" />
               </font>
            </Label>
            <Label fx:id="minute" styleClass="timer" text="00" textFill="WHITE">
               <font>
                  <Font name="Arial" size="70.0" />
               </font>
            </Label>
            <Label text=":" textFill="WHITE">
               <font>
                  <Font size="70.0" />
               </font>
            </Label>
            <Label fx:id="second" styleClass="timer" text="00" textFill="WHITE">
               <font>
                  <Font name="Arial" size="70.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <Button fx:id="startBtn" layoutX="199.0" layoutY="243.0" mnemonicParsing="false" onAction="#start" prefHeight="43.0" prefWidth="78.0" styleClass="Start" text="시작" />
      <Button layoutX="293.0" layoutY="243.0" mnemonicParsing="false" onAction="#stop" prefHeight="43.0" prefWidth="87.0" styleClass="Stop" text="정지" />
   </children>
</AnchorPane>
